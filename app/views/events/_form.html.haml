= form_for @event, html: { class: "form-horizontal", role: "form" } do |f|
  -if @event.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"

      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :start_date, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :start_date, class: 'form-control'
  .form-group
    = f.label :end_date, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :end_date, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
